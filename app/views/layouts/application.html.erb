<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <%= favicon_link_tag 'favicon.ico' %>
    <link href="https://fonts.googleapis.com/css?family=Athiti|Ubuntu" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container">

          <%= video_tag(
            'portfolio_bg_vid_medium.mp4',
            id: 'background',
            autoplay: true,
            loop: true,
            muted: true,
            controls: true,
            # poster: 'portfolio_bg_image.png'
          )
          %>
          <%= render "shared/application_nav" %>

          <%= yield %>
          <!-- yeild is where all other pages display within the layout -->

          <%= render "shared/application_footer" %>

          <%= alert %>
        </div>
      </div>
    </div>
  </body>
</html>
